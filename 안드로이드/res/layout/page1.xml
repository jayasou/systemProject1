<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="0dp" />
    <TextView
        android:layout_width="match_parent"
        android:text="내 정보"
        android:textColor="#000000"
        android:textSize="35dp"
        android:background="#FAED7D"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="1"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 \n자세는 ?"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_weight="0.60" />


        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="149dp"
            android:layout_height="97dp"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="목표 경고 횟수 : "
            android:textSize="15dp"
            android:layout_gravity="center_vertical"/>


        <TextView
            android:id="@+id/GoalWNumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 13 회 "
            android:textSize="15dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="총 경고 횟수 : "
            android:textSize="15dp"
            android:layout_gravity="center_vertical"/>


        <TextView
            android:id="@+id/TotalWNumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 2 회 "
            android:textSize="15dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="총 앉은 시간 : "
            android:textSize="15dp"

            android:layout_gravity="center_vertical"/>


        <TextView
            android:id="@+id/SittingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 3시간 30분 "
            android:textSize="15dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    </LinearLayout>


</LinearLayout>